{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@components/*": ["./components/*"],
            "@pages/*": ["./pages/*"],
            "@modules/*": ["./models/*"],
            "@layouts/*": ["./layouts/*"],
            "@hooks/*": ["./hooks/*"],
            "@utils/*": ["./utils/*"],
            "@images/*": ["./images/*"],
            "@context/*": ["./context/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
